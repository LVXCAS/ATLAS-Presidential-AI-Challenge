  "strategy_preferences": {
    "DUAL_OPTIONS": {
      "min_momentum": 0.03,
      "optimal_regime": ["bull", "trending"],
      "greek_targets": {
        "put_delta": -0.35,
        "call_delta": 0.35
      }
    },
    "BULL_PUT_SPREAD": {
      "max_momentum": 0.03,
      "optimal_regime": ["neutral", "bull"],
      "greek_targets": {
        "short_put_delta": -0.30,
        "long_put_delta": -0.15
      }
    },
    "BUTTERFLY": {
      "max_volatility": 0.02,
      "optimal_regime": ["sideways", "neutral"],
      "greek_targets": {
        "center_delta": 0.0,
        "wing_spread": 5
      }
    }
