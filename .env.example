# Bloomberg Terminal Trading System - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_PORT=8000
API_HOST=localhost
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (TimescaleDB)
DATABASE_URL=postgresql://trading_user:trading_password@localhost:5432/bloomberg_trading
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bloomberg_trading
DB_USER=trading_user
DB_PASSWORD=trading_password
DB_POOL_SIZE=20

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Paper Trading Mode (set to false for live trading)
PAPER_TRADING=true

# Trading Limits
MAX_POSITION_SIZE=10000
MAX_PORTFOLIO_VALUE=1000000
RISK_LIMIT=0.02
MAX_DRAWDOWN=0.10
INITIAL_CAPITAL=100000

# =============================================================================
# BROKER API KEYS
# =============================================================================

# Alpaca Trading API (https://app.alpaca.markets/)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# For paper trading (default)
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# For live trading (uncomment and use with caution)
# ALPACA_BASE_URL=https://api.alpaca.markets
# ALPACA_DATA_URL=https://data.alpaca.markets

# Polygon Market Data API (https://polygon.io/)
POLYGON_API_KEY=your_polygon_api_key_here

# IEX Cloud (Optional - https://iexcloud.io/)
IEX_API_KEY=your_iex_api_key_here

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket Server
WS_PORT=8001
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30000

# Frontend WebSocket URL
REACT_APP_WS_URL=ws://localhost:8001
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT and Security
SECRET_KEY=your_super_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# API Keys (for internal service authentication)
API_KEY=your_internal_api_key_here

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log
JSON_LOGS=false
STRUCTURED_LOGGING=true

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=trading-system@your-domain.com

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# AI AND MACHINE LEARNING
# =============================================================================

# OpenAI API (for sentiment analysis, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for NLP models)
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
AUTO_RELOAD=true
ENABLE_PROFILING=false
CORS_ENABLED=true

# Testing
TEST_DATABASE_URL=postgresql://trading_user:trading_password@localhost:5432/bloomberg_trading_test

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# ENVIRONMENT=production
# DEBUG=false
# PAPER_TRADING=false
# LOG_LEVEL=WARNING
# JSON_LOGS=true
# CORS_ENABLED=false
# ALPACA_BASE_URL=https://api.alpaca.markets

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_AGENTS=true
ENABLE_BACKTESTING=true
ENABLE_LIVE_TRADING=false
ENABLE_NEWS_SENTIMENT=true
ENABLE_OPTIONS_TRADING=false
ENABLE_CRYPTO_TRADING=false
ENABLE_FOREX_TRADING=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker Processes
MAX_WORKERS=4
WORKER_TIMEOUT=30

# Connection Limits
MAX_DB_CONNECTIONS=50
MAX_REDIS_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
BURST_LIMIT=100

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# COMPLIANCE AND REGULATION
# =============================================================================

# Regulatory Compliance
ENABLE_AUDIT_TRAIL=true
RETENTION_DAYS=2555  # 7 years
COMPLIANCE_MODE=SEC

# Pattern Day Trader Rules
PDT_ENABLED=true
MIN_ACCOUNT_EQUITY=25000

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://your-backup-bucket/

# =============================================================================
# EXAMPLES AND DOCUMENTATION
# =============================================================================

# Example values for common brokers:
# 
# Interactive Brokers:
# IB_GATEWAY_HOST=localhost
# IB_GATEWAY_PORT=7497
# 
# TD Ameritrade:
# TDA_CLIENT_ID=your_client_id
# TDA_REFRESH_TOKEN=your_refresh_token
# 
# E*TRADE:
# ETRADE_CLIENT_KEY=your_client_key
# ETRADE_CLIENT_SECRET=your_client_secret

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit this file with real API keys
# 2. Use strong, unique passwords for production
# 3. Enable 2FA on all broker accounts
# 4. Monitor your accounts regularly
# 5. Test with paper trading first
# 6. Keep backups of your configuration
# 7. Use environment-specific config files
# 8. Rotate API keys regularly
# 9. Monitor for unusual activity
# 10. Have an emergency stop procedure