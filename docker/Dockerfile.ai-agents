# Multi-stage build for AI Trading Agents
FROM python:3.11-slim as base

# Install system dependencies for PyTorch and ML libraries
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libblas3 \
    liblapack3 \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Set Python environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Build stage
FROM base as builder

WORKDIR /app

# Copy AI requirements
COPY docker/requirements-ai.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-ai.txt

# Production stage
FROM base as production

# Create non-root user
RUN groupadd -r aitrader && useradd -r -g aitrader aitrader

WORKDIR /app

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy AI agent code
COPY agents/ ./agents/
COPY optimized_rl_system.py .
COPY enhanced_risk_manager.py .
COPY config/ ./config/

# Create necessary directories
RUN mkdir -p logs data models ai_models && \
    chown -R aitrader:aitrader /app

# Set environment variables
ENV PYTHONPATH=/app \
    TORCH_HOME=/app/models \
    CUDA_VISIBLE_DEVICES=""

# Switch to non-root user
USER aitrader

# Health check - check if AI agents are responsive
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD python -c "import torch; print('AI agents healthy')" || exit 1

# Start AI agents
CMD ["python", "-c", "from agents.multi_asset_momentum_agent import MultiAssetMomentumAgent; from agents.market_making_agent import MarketMakingAgent; from agents.statistical_arbitrage_agent import StatisticalArbitrageAgent; import time; print('Starting AI agents...'); time.sleep(3600)"]